<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_comp_margin"
                android:layout_marginStart="@dimen/activity_horizontal_comp_margin"
                android:layout_marginRight="@dimen/activity_horizontal_comp_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_comp_margin"
                android:layout_marginTop="@dimen/activity_vertical_comp_margin"
                android:layout_marginBottom="@dimen/activity_vertical_comp_margin"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_file_name"
                style="@style/txt_size_middle_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="武松打老虎.txt"/>

            <ImageButton
                android:id="@+id/iv_openFile"
                android:scaleType="centerCrop"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/activity_horizontal_comp_margin"
                android:layout_marginStart="@dimen/activity_horizontal_comp_margin"
                android:layout_marginRight="@dimen/activity_horizontal_comp_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_comp_margin"
                android:layout_marginTop="@dimen/activity_vertical_comp_margin"
                android:layout_marginBottom="@dimen/activity_vertical_comp_margin"
                android:src="@mipmap/ic_download"/>

            <ProgressBar
                android:id="@+id/pb_wait"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/activity_horizontal_comp_margin"
                android:layout_marginStart="@dimen/activity_horizontal_comp_margin"
                android:layout_marginRight="@dimen/activity_horizontal_comp_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_comp_margin"
                android:layout_marginTop="@dimen/activity_vertical_comp_margin"
                android:layout_marginBottom="@dimen/activity_vertical_comp_margin"/>

        </LinearLayout>
        
        <ProgressBar
            android:id="@+id/pb_download"
            android:layout_width="match_parent"
            android:layout_height="@dimen/progressBar_height"
            style="?android:attr/progressBarStyleHorizontal"
            android:visibility="gone"
            android:layout_gravity="bottom" />

    </android.support.v7.widget.CardView>

</LinearLayout>