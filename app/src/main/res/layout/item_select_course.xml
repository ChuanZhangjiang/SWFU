<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_course_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_comp_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cb_check_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/activity_horizontal_comp_margin"
            android:layout_marginStart="@dimen/activity_horizontal_comp_margin"
            android:checked="false" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9">

            <TextView
                android:id="@+id/tv_course_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txt_size_middle_black"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/activity_horizontal_comp_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_comp_margin"
                android:layout_marginTop="@dimen/activity_vertical_comp_margin"
                android:layout_marginBottom="@dimen/activity_vertical_comp_margin"
                android:text="@string/select_course_course_name"/>

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txt_size_middle_black"
                android:layout_alignTop="@id/tv_course_name_title"
                android:layout_toRightOf="@id/tv_course_name_title"
                android:layout_toEndOf="@id/tv_course_name_title"
                android:text="语文"/>

            <TextView
                android:id="@+id/tv_teacher_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txt_size_middle_black"
                android:layout_below="@id/tv_course_name_title"
                android:layout_marginRight="@dimen/activity_horizontal_comp_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_comp_margin"
                android:layout_marginBottom="@dimen/activity_vertical_comp_margin"
                android:text="@string/select_course_course_teacher"/>

            <TextView
                android:id="@+id/tv_course_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txt_size_middle_black"
                android:layout_toRightOf="@id/tv_teacher_title"
                android:layout_toEndOf="@id/tv_teacher_title"
                android:layout_below="@id/tv_course_name_title"
                android:text="李清照"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>