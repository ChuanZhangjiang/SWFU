<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_notify_item"
    android:layout_marginTop="@dimen/activity_vertical_comp_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/iv_public_notify_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_comp_margin"
                android:layout_marginBottom="@dimen/activity_vertical_comp_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_comp_margin"
                android:layout_marginRight="@dimen/activity_horizontal_comp_margin"
                android:src="@mipmap/ic_public_notify"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_marginLeft="@dimen/activity_horizontal_comp_margin"
            android:layout_marginRight="@dimen/activity_horizontal_comp_margin"
            android:layout_marginTop="@dimen/activity_vertical_comp_margin"
            android:layout_marginBottom="@dimen/activity_vertical_comp_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_public_notify_title"
                style="@style/txt_size_xlarge_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"/>

            <TextView
                android:id="@+id/tv_public_notify_content"
                style="@style/txt_size_middle_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_comp_margin"
                android:maxLines="3"
                android:text="内容"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>